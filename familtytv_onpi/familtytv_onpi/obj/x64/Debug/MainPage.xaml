<Page
    x:Class="familtytv_onpi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:familtytv_onpi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,-286,0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,51,0,10" Height="579" Width="636">
            <TextBox x:ConnectionId='1' x:Name="HelloMessage" Text="Hello, World!" Margin="10" IsReadOnly="True"/>
            <Button x:ConnectionId='2' x:Name="ClickMe" Content="Click Me!"  Margin="10" HorizontalAlignment="Center"                      />
            <Button x:ConnectionId='3' x:Name="previousButton" Content="Previous"/>
            <Button x:ConnectionId='4' x:Name="nextButton" Content="Next"/>
            <Image x:ConnectionId='5' x:Name="image" Height="268" Margin="111,0,59,0"/>

        </StackPanel>


    </Grid>
</Page>

